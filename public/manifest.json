{
  "manifest_version": 3,
  "name": "ChatGPT History",
  "version": "1.0",
  "permissions": ["cookies"],

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content-chatgpt.js"]
    }
  ],

  "host_permissions": [
    "https://chatgpt.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}